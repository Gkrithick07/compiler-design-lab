%{ 
/* This LEX program returns the tokens for the Expression */ 
#include "y.tab.h" 
%} 

%% 
"int "      { return INT; } 
"float"     { return FLOAT; } 
"double"    { return DOUBLE; } 

[a-zA-Z][0-9]   {
                      printf("\nIdentifier is %s", yytext); 
                      return ID; 
                  }  

return yytext[0]; 

\n                return 0; 

%% 

int yywrap() 
{ 
    return 1; 
}
%{ 
#include 
/* This YACC program is for recognising the Expression */ 
%} 

%token ID INT FLOAT DOUBLE 

%% 
D : T L 
  ; 

L : L ',' ID 
  | ID 
  ; 

T : INT 
  | FLOAT 
  | DOUBLE 
  ; 
%% 

extern FILE *yyin; 

main() 
{ 
    do 
    { 
        yyparse(); 
    } while (!feof(yyin)); 
} 

yyerror(char *s) 
{ 
}
